<div class="container">
  <div>
    <h1>Nubaria</h1>
    <p class="login-title">Log-in</p>
  </div>
  <form action="/login" method="post">
  <div>
    <div class="input">
      <input
        id="nickname"
        name="nickname"
        type="text"
        placeholder="nickname"
        autofocus
        />
    </div>
  </div>
  <div>
    <div class="input">
      <input
        id="password"
        name="password"
        type="password"
        placeholder="password"
        />
    </div>
  </div>
  <div>
    <button
      class="btn btn-purple"
      type="submit"
      >
      Ok
    </button>
  </div>
  </form>
</div>
